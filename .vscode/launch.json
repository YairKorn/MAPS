    "version": "0.2.0",
    "configurations": [
        {
            "name": "CurrentFile",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "PyMARL_PSeq",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--config=pseq",
                "--env-config=multi_coverage",
                "-d"
            ],
            "justMyCode": true
        },
        {
            "name": "PyMARL_DCG",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--config=dcg",
                "--env-config=multi_coverage",
                "-d"
            ]
        }
    ]
}