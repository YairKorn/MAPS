    "version": "0.2.0",
    "configurations": [
        {
            "name": "CurrentFile",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "PyMARL_MAPS",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--config=maps",
                "--env-config=adv_coverage",
                "with",
                "obs_agent_id=False",
                "-d"
            ],
        },
        {
            "name": "PyMARL_IQL",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--config=iql",
                "--env-config=adv_coverage",
                "with",
                "obs_agent_id=True",
                "-d"
            ],
        },
        {
            "name": "PyMARL_DCG",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--config=dcg",
                "--env-config=hunt_trip",
                "with",
                "obs_agent_id=True",
                "-d"
            ]
        }
    ]
}